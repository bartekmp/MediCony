{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config: recommended",
    "group:allNonMajor",
    ":automergePr",
    ":automergeMinor",
    ":combinePatchMinorReleases",
    ":semanticCommits",
    ":disableDependencyDashboard",
    "schedule:weekly"
  ],
  "labels": [
    "dependencies"
  ],
  "timezone": "Europe/Warsaw",
  "rangeStrategy": "replace",
  "prConcurrentLimit": 5,
  "prCreation": "immediate",
  "rebaseWhen": "behind-base-branch",
  "stopUpdatingLabel": "renovate-stop",
  "enabledManagers": [
    "poetry",
    "dockerfile",
    "github-actions"
  ],
  "reviewers": [
    "bartekmp"
  ],
  "suppressNotifications": [
    "prIgnoreNotification"
  ],
  "separateMinorPatch": false,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "automerge": false,
    "prPriority": 100
  },
  "configMigration": true,
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "enabled": true,
      "pinDigests": true
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "groupName": "Python dependencies",
      "labels": [
        "python"
      ],
      "schedule": [
        "every weekend"
      ]
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "groupName": "Docker base images",
      "labels": [
        "docker"
      ],
      "schedule": [
        "monthly"
      ],
      "pinDigests": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "major update"
      ],
      "prPriority": 10,
      "automerge": false,
      "groupName": null,
      "commitMessagePrefix": "BREAKING:"
    }
  ]
}
