# Required: Medicover credentials
# for a single account:
MEDICOVER_USERDATA=username:password
# for multiple accounts (semicolon-separated):
# format: alias@username:base64-encoded-password;alias2@username2:base64-encoded-password2[...]
# login and password MUST be base64-encoded
# MEDICOVER_USERDATA=first@username1:b64password1;second@username2:b64password2

# Required for Telegram notifications (both must be set together) - check the "Telegram Bot" section in the README
MEDICONY_TELEGRAM_CHAT_ID=
MEDICONY_TELEGRAM_TOKEN=

# Optional: Application settings
SLEEP_PERIOD_SEC=300
LOG_PATH=log/medicony.log

# Optional: Telegram bot default values for add command
TELEGRAM_ADD_COMMAND_SUGGESTED_PROPERTIES=region:123[Your region];city:Your city

# Required: PostgreSQL database connection settings
POSTGRES_HOST=address
POSTGRES_PORT=port # e.g., 5432
POSTGRES_USER=medicony
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=medicony

# Optional: Medicine search timeout in seconds (default: 120)
MEDICINE_SEARCH_TIMEOUT_SECONDS=300